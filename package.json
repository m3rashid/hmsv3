{
  "name": "hmsv3",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "check:format": "prettier --check .",
    "check:lint": "eslint . --ext .ts --ext .js",
    "format": "prettier --write .",
    "check:all": "yarn check:format && yarn check:lint && cd client && yarn build",
    "ci": "yarn install --production",
		"format:write": "prettier --write .",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix \"**/!(node_modules|dist)/*.{js,jsx,ts,tsx}\"",
		"precommit": "lint-staged",
		"prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^8.11.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m3rashid/hmsv3.git"
  },
  "bugs": {
    "url": "https://github.com/m3rashid/hmsv3/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,d.ts}": [
			"yarn lint:fix",
			"yarn format:write"
		],
		"*.json": [
			"yarn format:write"
		]
  }
}
